#!/system/bin/sh
# git: wrapper to set up and run git from terminal
# nelshh @ xda-developers

dir="$(cd "$(dirname "$0")"; pwd)";

if [ "$1" == "--term" ]; then
  term=$2;
  shift 2;
else
  term=screen;
fi;

resize 2>/dev/null;
GIT_TEMPLATE_DIR=$dir/../usr/share/git-core/templates GIT_EXEC_PATH=$dir/../usr/libexec/git-core TERMINFO=$dir/../etc/terminfo TERM=$term $dir/git.bin "$@";
